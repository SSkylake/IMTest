<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_height"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/re_head"
        android:layout_width="@dimen/chat_height"
        android:layout_height="@dimen/chat_height"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/re_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wide"
        android:background="@drawable/shape_receive"
        android:gravity="center"
        android:padding="@dimen/wide"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/re_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/normal_padding"
        android:textSize="@dimen/text_size_small" />


</LinearLayout>
